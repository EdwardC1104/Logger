{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["ES6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./",
        "paths": {
            "@databases/*": ["app/databases/*"],
            "@errors/*": ["app/errors/*"],
            "@middlewares/*": ["app/middlewares/*"],
            "@routes/*": ["app/routes/*"],
            "@utils/*": ["app/utils/*"],
            "@types/*": ["app/types/*"]
        },
        "typeRoots": ["@types", "./node_modules/@types", "./app/types"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
